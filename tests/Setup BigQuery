CREATE SCHEMA `your-project.namo_memories`;

CREATE TABLE `your-project.namo_memories.long_term_memories` (
  memory_id STRING,
  content STRING,
  type STRING,
  emotion_context STRUCT<
    sentiment_score FLOAT64,
    emotion_type STRING,
    intensity INT64
  >,
  dharma_tags ARRAY<STRING>,
  timestamp TIMESTAMP,
  expiration_time TIMESTAMP
);